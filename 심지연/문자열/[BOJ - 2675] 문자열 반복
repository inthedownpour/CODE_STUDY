#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main() {
	int T, R;
	char S[20] = { "" };
	scanf("%d", &T);
	for (int i = 0; i < T; i++) {
		scanf("%d %s", &R, &S);
		//printf("%s", S);
		int len = strlen(S);
		//printf("S[0] = %c, 길이: %d", S[0], len);
		for (int j = 0; j < len; j++) {
			for(int k =0;k<R;k++)
			printf("%c", S[j]);
		}
		printf("\n");
	}
	return 0;
}
