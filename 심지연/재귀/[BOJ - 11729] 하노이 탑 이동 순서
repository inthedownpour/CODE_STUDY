#include<iostream>
#include<stdio.h>
#include<algorithm>
#include<string.h>
#include<vector>
#include<queue>

using namespace std;

void times(int a, int b, int c) {
	if (c == 1) {
		cout << a << ' ' << b << endl;
		return;
	}
	times(a, 6 - a - b, c - 1);
	cout << a << ' ' << b << endl;
	times(6 - a - b, b, c - 1);
}


int main(void) {
	int k;
	cin >> k;
	cout << (1 <<k) - 1<<endl;
	times(1, 3, k);

	return 0;
}
